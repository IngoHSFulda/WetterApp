<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dein Wetter</name>
    <description>
        Welches Wetter ist da wo ich bin?
    </description>
    <icon src="./www/img/sonne.PNG" />
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Ingo Schwarzhaupt
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="https://api.openweathermap.org/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AndroidBlacklistSecureSocketProtocols" value="SSLv3,TLSv1" />
    <preference name="GOOGLE_MAPS_ANDROID_API_KEY" value="AIzaSyB8EhZb4u3SoGTiC0khkqBgq2IKKFAvlz0" />
    <preference name="GOOGLE_MAPS_IOS_API_KEY" value="AIzaSyB8EhZb4u3SoGTiC0khkqBgq2IKKFAvlz0" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
